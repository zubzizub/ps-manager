{% extends 'base.html.twig' %}

{% block title %}Games{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
        </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.name }}</td>
                <td>{{ game.price|number_format(2, '.', ',') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
